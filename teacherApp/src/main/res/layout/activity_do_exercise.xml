<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="src.com.ui.DoExercise"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relateLayout"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="?colorPrimary">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:background="@drawable/btn_back_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/exerciseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="题目"
            android:textSize="17dp"
            android:background="@drawable/button_register"
            android:textColor="@color/login_btn_text_color"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/exerciseContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="公公起早贪黑，打早工，打晚工。挣工分，夺口粮。种南瓜，栽红薯。不论天晴下雨，总是一双赤脚。被水牛踩过，被黄牛挖过，手被大虺咬过，脚被玻璃划过，伤痕难瘉，怎能忘记。"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="A:说什么我都不是在真的假的我说的都是真的"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="B:说什么我都不是在真的假的我说的都是真的"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="C:说什么我都不是在真的假的我说的都是真的"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="D:说什么我都不是在真的假的我说的都是真的"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="发布设置"
            android:textSize="17dp"
            android:background="@drawable/button_register"
            android:textColor="@color/login_btn_text_color"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="6dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:text="时间："
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/time"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/textTime"
                android:layout_marginTop="7dp"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/time"
                android:text="分钟"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/peopleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/second"
                android:text="人数："
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/number"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/peopleNumber"
                android:layout_marginTop="7dp"
                android:inputType="number"
                />
            <TextView
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/number"
                android:text="人"
                android:textSize="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/submit"
                android:layout_width="150dip"
                android:layout_height="40dip"
                android:background="@drawable/button_login"
                android:layout_marginRight="10dip"
                android:text="发布"
                android:textSize="20dp"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/submitOver"
                android:layout_width="150dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/button_register"
                android:layout_toRightOf="@id/submit"
                android:text="结束"
                android:textSize="20dp"
                android:textColor="@color/login_btn_text_color"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/releaseResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布人数；"
                android:textSize="17dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48 "
                android:textSize="17dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text1"
                />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答题人数："
                android:textSize="17dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text2"
                />
            <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48 "
            android:textSize="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text3"
            />
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正确率 80%"
                android:textSize="17dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text4"
                />
            <TextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" A:10人 B 20人 C 10人 D 10人"
                android:textSize="17dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text3"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
